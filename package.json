  "scripts": {
    "dev": "concurrently yarn:dev:client yarn:dev:server",
    "dev:client": "cd client && yarn dev",
    "dev:server": "cd server && yarn dev",
    "build": "yarn build:client && yarn build:server",
    "build:client": "cd client && yarn install --frozen-lockfile --production && yarn build:parcel",
    "build:server": "cd server && yarn install --frozen-lockfile --production",
    "start": "cd server && yarn start",
    "p:check": "prettier --check **/*.{js,jsx,ts,tsx}",
    "p:format": "prettier --write **/*.{js,jsx,ts,tsx}",
    "test": "jest --collectCoverage",
    "verify": "yarn p:check && yarn test && yarn verify:server && yarn verify:client",
    "verify:server": "cd server && yarn verify",
    "verify:client": "cd client && yarn verify"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "concurrently": "^7.0.0",
    "coveralls": "^3.1.1",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=16.13.1",
    "npm": ">=8.3.1"
  }
}
